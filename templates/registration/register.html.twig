{% block stylesheets %}
<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)),
                    url('https://images.unsplash.com/photo-1587614203976-365c74645e83') no-repeat center center fixed;
        background-size: cover;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }
    .register-box {
        max-width: 400px;
        margin: 80px auto;
        background: rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
    }
    .register-box form {
        display: flex;
        flex-direction: column;
        gap: 13px;
    }

    .app-title {
        font-size: 32px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
        color: #ffd700;
    }

    label {
        margin-top: 15px;
        font-weight: bold;
        color: #ddd;
        transition: color 0.3s ease;
    }

    label:hover {
        color: #ffd700;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        transition: border 0.3s;
        padding: 10px 10px;
        width: 100%;
        background: transparent;
        color: white;
    }

    .form-control:focus {
        border-color: #ffd700;
        box-shadow: 0 0 5px #ffd700;
        outline: none;
    }

    .btn-register {
        background-color: #e9e8e5;
        color: #625e5e;
        font-weight: bold;
        border-radius: 10px;
        width: 100%;
        margin-top: 20px;
        transition: background 0.3s ease;
        padding: 10px;
        cursor: pointer;
        border: none;
    }

    .btn-register:hover {
        background-color: #ffcc00;
    }

    .alert-danger {
        background-color: #dc3545;
        color: white;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
    }
</style>
{% endblock %}

