{% extends 'base.html.twig' %}

{% block title %}🎓 StudyHub | Login{% endblock %}

{% block stylesheets %}
<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)),
                    url('https://images.unsplash.com/photo-1587614203976-365c74645e83') no-repeat center center fixed;
        background-size: cover;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }
    .login-box {
        max-width: 400px;
        margin: 80px auto;
        background: rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
    }
    .login-box form {
        display: flex;
        flex-direction: column;
        gap: 13px;
    }

    .app-title {
        font-size: 32px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
        color: #ffd700;
    }

    .emoji-banner {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    label {
        margin-top: 15px;
        font-weight: bold;
        color: #ddd;
        transition: color 0.3s ease;
    }

    label:hover {
        color: #ffd700;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        transition: border 0.3s;
        padding: 10px 10px;
        width: 100%;
    }

    .form-control:focus {
        border-color: #ffd700;
        box-shadow: 0 0 5px #ffd700;
    }

    .btn-login {
        background-color: #e9e8e5;
        color: #625e5e;
        font-weight: bold;
        border-radius: 10px;
        width: 100%;
        margin-top: 20px;
        transition: background 0.3s ease;
        padding: 10px;
    }

    .btn-login:hover {
        background-color: #ffcc00;
    }

    .toggle-password {
        cursor: pointer;
        position: absolute;
        right: 0;
        top: 0;
        color: #ccc;
    }

    .form-group {
        position: relative;
    }

    .alert-danger {
        background-color: #dc3545;
        color: white;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
    }

    .remember-me {
        color: #ccc;
    }

    .remember-me label:hover {
        color: #ffd700;
    }
</style>
{% endblock %}

{% block body %}
<div class="login-box">
    <div class="app-title">
        📚 StudyHub
    </div>
    <div class="emoji-banner">
        🎓📖🧠📅📝
    </div>

    {% if danger %}
        <div class="alert alert-danger">
            {{ danger.messageKey|trans(danger.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <label for="inputEmail">Adresse e-mail</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

        <label for="inputPassword">Mot de passe</label>
        <div class="form-group">
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <span toggle="#inputPassword" class="toggle-password" onclick="togglePassword()">👁️</span>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox remember-me mt-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

        <button class="btn btn-login" type="submit">Se connecter 🚀</button>
    </form>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById('inputPassword');
        const toggle = document.querySelector('.toggle-password');
        if (input.type === 'password') {
            input.type = 'text';
            toggle.textContent = '🙈';
        } else {
            input.type = 'password';
            toggle.textContent = '👁️';
        }
    }
</script>
{% endblock %}
