{% extends 'base.html.twig' %}

{% block title %}🎓 StudyHub | Login{% endblock %}

{% block body %}
<div class="login-box">
    <div class="app-title">
        📚 StudyHub
    </div>
    <div class="emoji-banner">
        🎓📖🧠📅📝
    </div>

    {% if danger %}
        <div class="alert alert-danger">
             {% include 'error/_flash-error.html.twig' %}
        </div>
    {% endif %}

    <form method="post">
        <label for="inputEmail">Adresse e-mail</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

        <label for="inputPassword">Mot de passe</label>
        <div class="form-group">
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <span toggle="#inputPassword" class="toggle-password" onclick="togglePassword()">👁️</span>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox remember-me mt-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

        <button class="btn btn-login" type="submit">Se connecter 🚀</button>
    </form>

    <div class="links-container">
        <a href="{{ path('app_register') }}">S'enregistrer</a> |
        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
    </div>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById('inputPassword');
        const toggle = document.querySelector('.toggle-password');
        if (input.type === 'password') {
            input.type = 'text';
            toggle.textContent = '🙈';
        } else {
            input.type = 'password';
            toggle.textContent = '👁️';
        }
    }
</script>
{% endblock %}
